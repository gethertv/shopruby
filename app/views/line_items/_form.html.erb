<%= form_with(model: line_item) do |form| %>
  <% if line_item.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(line_item.errors.count, "error") %> prohibited this line_item from being saved:</h2>

      <ul>
        <% line_item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :product_id, style: "display: block" %>
    <%= form.collection_select :product_id, Product.all, :id, :name, { prompt: true }, { selected: line_item.product_id } %>
  </div>

  <div>
    <%= form.label :cart_id, style: "display: block" %>
    <%= form.collection_select :cart_id, Cart.all, :id, :id, { prompt: true }, { selected: line_item.cart_id } %>

  </div>

  <div>
    <%= form.label :quantity, style: "display: block" %>
    <%= form.number_field :quantity %>
  </div>

  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.text_field :price %>
  </div>

  <div style="margin: 20px">
    <%= form.submit class: 'btn-add' %>
  </div>
<% end %>
